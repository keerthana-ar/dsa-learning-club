int matSearch (int N, int M, int matrix[][M], int x)
	{
     int r=0, c=M-1;
     while(r<N&&c>0)
     {
       if(matrix[r][c]==x)
       {
           return 1;
       }
       
       if(matrix[r][c]>x)
       {
           c=c-1;
       }
       
       else
       {
           r=r+1;
       }
       
   return 0;
    }
	}
